{
    "appId": "com.fmt.salon",
    "productName": "Salon",
    "copyright": "FMT",
    "directories": {
        "app": ".",
        "output": "out",
        "buildResources": "assets"
    },
    "extraResources": [
        "dist/public",
        {
            "from":"./db/",
            "to":"db/",
            "filter":["**/*"]
        }
      ],
    "files": [
        "package.json",
        "build/**/*",
        "app/**/*",
        "node_modules"
    ],
    "dmg": { 
        "backgroundColor": "#ffffff",
        "icon": "icon.png",
        "window": {
            "width": "400",
            "height": "300"
        },
        "contents": [
            {
                "x": 100,
                "y": 100
            },
            {
                "x": 300,
                "y": 100,
                "type": "link",
                "path": "/Applications"
            }
        ]
    },
    "mac": {
        "target": "dmg",
        "category": "public.app-category.utilities"
      },
    "win": {
        "target": "nsis"
    },
    "linux": {
        "target": "AppImage",
        "category": "Utility"
    },
    "extends":null
}
